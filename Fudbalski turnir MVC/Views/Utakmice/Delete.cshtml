@model FudbalskiTurnir.ViewModels.UtakmicaViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Utakmica</h4>
    <hr />
    <dl class="row">
        @* Osnovni podaci *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mesto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mesto)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kolo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kolo)
        </dd>

        @* Timovi razdvojeno *@
        <dt class="col-sm-2">
            Domaćin tim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrviKlubNaziv)
        </dd>

        <dt class="col-sm-2">
            Gost tim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrugiKlubNaziv)
        </dd>

        @* Golovi razdvojeno *@
        <dt class="col-sm-2">
            Domaćin golovi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrviKlubGolovi)
        </dd>

        <dt class="col-sm-2">
            Gost golovi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrugiKlubGolovi)
        </dd>

        @* Dodatni detalji (Produžeci/Penali) *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produzeci)
        </dt>
        <dd class="col-sm-10">
            @(Model.Produzeci ? "Da" : "Ne")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Penali)
        </dt>
        <dd class="col-sm-10">
            @(Model.Penali ? "Da" : "Ne")
        </dd>

        @* Penali razdvojeno (prikazuju se samo ako ih je bilo) *@
        @if (Model.Penali)
        {
            <dt class="col-sm-2">
                Domaćin penali
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrviKlubPenali)
            </dd>

            <dt class="col-sm-2">
                Gost penali
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DrugiKlubPenali)
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UtakmicaID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-1">Back to List</a>
        </div>

        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark mt-1">Back to Admin Page</a>
    </form>
</div>