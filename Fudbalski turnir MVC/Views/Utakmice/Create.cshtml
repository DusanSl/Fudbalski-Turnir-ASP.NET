@model FudbalskiTurnir.ViewModels.UtakmicaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Utakmica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurnirID" class="control-label">Turnir</label>
                <select asp-for="TurnirID" id="turnirDropdown" class="form-control" asp-items="ViewBag.Turniri">
                    <option value="">Izaberite turnir</option>
                </select>
                <span asp-validation-for="TurnirID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesto" class="control-label"></label>
                <input asp-for="Mesto" class="form-control" />
                <span asp-validation-for="Mesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrviKlubNaziv" class="control-label">Domaći klub</label>
                <select asp-for="PrviKlubNaziv" id="prviKlubDropdown" class="form-control">
                    <option value="">Prvo izaberite turnir</option>
                </select>
                <span asp-validation-for="PrviKlubNaziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DrugiKlubNaziv" class="control-label">Gostujući klub</label>
                <select asp-for="DrugiKlubNaziv" id="drugiKlubDropdown" class="form-control">
                    <option value="">Prvo izaberite turnir</option>
                </select>
                <span asp-validation-for="DrugiKlubNaziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolo" class="control-label"></label>
                <input asp-for="Kolo" class="form-control" />
                <span asp-validation-for="Kolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrviKlubGolovi" class="control-label"></label>
                <input asp-for="PrviKlubGolovi" class="form-control" />
                <span asp-validation-for="PrviKlubGolovi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugiKlubGolovi" class="control-label"></label>
                <input asp-for="DrugiKlubGolovi" class="form-control" />
                <span asp-validation-for="DrugiKlubGolovi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produzeci" /> @Html.DisplayNameFor(model => model.Produzeci)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Penali" /> @Html.DisplayNameFor(model => model.Penali)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PrviKlubPenali" class="control-label"></label>
                <input asp-for="PrviKlubPenali" class="form-control" />
                <span asp-validation-for="PrviKlubPenali" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugiKlubPenali" class="control-label"></label>
                <input asp-for="DrugiKlubPenali" class="form-control" />
                <span asp-validation-for="DrugiKlubPenali" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success mb-1 mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<a asp-controller="Admin" asp-action="Index" class="btn btn-dark mb-1 mt-1">Back to Admin Page</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('turnirDropdown').addEventListener('change', function() {
            const turnirId = this.value;
            const prviKlubDropdown = document.getElementById('prviKlubDropdown');
            const drugiKlubDropdown = document.getElementById('drugiKlubDropdown');

            if (turnirId) {
                fetch(`/Utakmice/GetKluboviByTurnir?turnirId=${turnirId}`)
                    .then(response => response.json())
                    .then(data => {
                        prviKlubDropdown.innerHTML = '<option value="">Izaberi klub</option>';
                        drugiKlubDropdown.innerHTML = '<option value="">Izaberi klub</option>';

                        data.forEach(klub => {
                            prviKlubDropdown.innerHTML += `<option value="${klub.imeKluba}">${klub.imeKluba}</option>`;
                            drugiKlubDropdown.innerHTML += `<option value="${klub.imeKluba}">${klub.imeKluba}</option>`;
                        });
                        prviKlubDropdown.disabled = false;
                        drugiKlubDropdown.disabled = false;
                    })
                    .catch(error => {
                        alert('Greška pri učitavanju klubova');
                    });
            } else {
                prviKlubDropdown.innerHTML = '<option value="">Prvo izaberi turnir</option>';
                drugiKlubDropdown.innerHTML = '<option value="">Prvo izaberi turnir</option>';
                prviKlubDropdown.disabled = true;
                drugiKlubDropdown.disabled = true;
            }
        });
    </script>
}
