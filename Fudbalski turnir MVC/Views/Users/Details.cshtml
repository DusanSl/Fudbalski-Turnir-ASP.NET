@model FudbalskiTurnir.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Korisnik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Broj telefona</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Nije unet" : Model.PhoneNumber)</dd>

        <dt class="col-sm-2">Email Potvrđen</dt>
        <dd class="col-sm-10">@(Model.EmailConfirmed ? "Da" : "Ne")</dd>

        <dt class="col-sm-2">Tel. Potvrđen</dt>
        <dd class="col-sm-10">@(Model.PhoneNumberConfirmed ? "Da" : "Ne")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Aktivan" : "Banovan")</dd>

        <dt class="col-sm-2">Uloge</dt>
        <dd class="col-sm-10">
            @if (Model.Roles != null && Model.Roles.Any())
            {
                @string.Join(", ", Model.Roles)
            }
            else
            {
                <span>Korisnik</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>