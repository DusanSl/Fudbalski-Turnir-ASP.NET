@model BracketViewModel

@{
    void RenderMatch(KnockoutUtakmica match)
    {
        if (match == null) return;

        <div class="match-box shadow-sm mb-3 border rounded bg-white" style="font-size: 0.85rem; min-width: 160px;">
            <div class="d-flex justify-content-between align-items-center p-2 @(match.Pobednik == match.PrviKlubNaziv ? "bg-success bg-opacity-10 fw-bold" : "")">
                <span class="text-truncate" style="max-width: 110px;">@match.PrviKlubNaziv</span>
                <span class="badge bg-light text-dark border">@(match.PrviKlubGolovi?.ToString() ?? "-")</span>
            </div>
            <div style="height: 1px; background: #eee;"></div>
            <div class="d-flex justify-content-between align-items-center p-2 @(match.Pobednik == match.DrugiKlubNaziv ? "bg-success bg-opacity-10 fw-bold" : "")">
                <span class="text-truncate" style="max-width: 110px;">@match.DrugiKlubNaziv</span>
                <span class="badge bg-light text-dark border">@(match.DrugiKlubGolovi?.ToString() ?? "-")</span>
            </div>
        </div>
    }
}

@if (Model == null || (Model.OsminaFinala?.Count == 0 && Model.Cetvrtfinale?.Count == 0 && Model.Polufinale?.Count == 0 && Model.Finale == null))
{
    <div class="alert alert-warning m-4">
        Nema podataka o eliminacionoj fazi za ovaj turnir.
    </div>
}
else
{
    <div class="container-fluid py-4 overflow-auto">
        <div class="d-flex justify-content-between align-items-stretch text-center" style="min-width: 1200px;">

            @* --- LEVA STRANA --- *@

            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-muted fw-bold mb-2">Osmina finala</small>
                @foreach (var m in Model.OsminaFinala.Take(4)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-muted fw-bold mb-2">Četvrtfinale</small>
                @foreach (var m in Model.Cetvrtfinale.Take(2)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-muted fw-bold mb-2">Polufinale</small>
                @foreach (var m in Model.Polufinale.Take(1)) { RenderMatch(m); }
            </div>

            <div class="d-flex flex-column justify-content-center px-4">
                <div class="text-center">
                    <h4 class="text-primary fw-bold">FINALE</h4>
                    @if (Model.Finale != null)
                    {
                        <div class="card shadow border-primary mx-auto" style="width: 220px;">
                            <div class="card-body p-2">
                                <div class="py-2 @(Model.Finale.Pobednik == Model.Finale.PrviKlubNaziv ? "text-success fw-bold" : "")">
                                    @Model.Finale.PrviKlubNaziv
                                    <span class="float-end">@Model.Finale.PrviKlubGolovi</span>
                                </div>
                                <hr class="my-1">
                                <div class="py-2 @(Model.Finale.Pobednik == Model.Finale.DrugiKlubNaziv ? "text-success fw-bold" : "")">
                                    @Model.Finale.DrugiKlubNaziv
                                    <span class="float-end">@Model.Finale.DrugiKlubGolovi</span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Finale.Pobednik))
                        {
                            <div class="mt-4 animate__animated animate__fadeIn">
                                <h5 class="text-success mb-0">POBEDNIK</h5>
                                <h3 class="fw-bold">@Model.Finale.Pobednik</h3>
                            </div>
                        }
                    }
                </div>
            </div>


            @* --- DESNA STRANA --- *@

            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-muted fw-bold mb-2">Polufinale</small>
                @foreach (var m in Model.Polufinale.Skip(1).Take(1)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-muted fw-bold mb-2">Četvrtfinale</small>
                @foreach (var m in Model.Cetvrtfinale.Skip(2).Take(2)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-muted fw-bold mb-2">Osmina finala</small>
                @foreach (var m in Model.OsminaFinala.Skip(4).Take(4)) { RenderMatch(m); }
            </div>

        </div>
    </div>
}