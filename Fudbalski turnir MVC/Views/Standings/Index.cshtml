@model List<StandingsViewModel>

@{
    ViewData["Title"] = "Tabela";
}

<h1>Tabela Turnira</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" asp-action="Index" id="tournamentForm">
            <div class="form-group">
                <label>Izaberite Turnir:</label>
                <select name="turnirId" class="form-control" onchange="this.form.submit()">
                    <option value="">Izaberite turnir</option>
                    @foreach (var item in ViewBag.Turniri)
                    {
                        <option value="@item.Value" selected="@(item.Value == ViewBag.SelectedTurnirId?.ToString())">
                            @item.Text
                        </option>
                    }
                </select>
            </div>
            <input type="hidden" name="faza" value="@ViewBag.SelectedFaza" />
        </form>
    </div>
</div>

@if (ViewBag.SelectedTurnirId != null)
{
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedFaza == "Grupna" ? "active" : "")"
               asp-action="Index"
               asp-route-turnirId="@ViewBag.SelectedTurnirId"
               asp-route-faza="Grupna">
                Grupna Faza
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.SelectedFaza == "Eliminaciona" ? "active" : "")"
               asp-action="Index"
               asp-route-turnirId="@ViewBag.SelectedTurnirId"
               asp-route-faza="Eliminaciona">
                Eliminaciona Faza
            </a>
        </li>
    </ul>

    @if (ViewBag.SelectedFaza == "Grupna")
    {
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Klub</th>
                        <th>O</th>
                        <th>P</th>
                        <th>N</th>
                        <th>I</th>
                        <th>DG</th>
                        <th>PG</th>
                        <th>GR</th>
                        <th class ="text-center">Bodovi</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td class="text-center">@(i + 1)</td>
                            <td><strong>@Model[i].KlubNaziv</strong></td>
                            <td class="text-center">@Model[i].Odigrano</td>
                            <td class="text-center">@Model[i].Pobede</td>
                            <td class="text-center">@Model[i].Nereseno</td>
                            <td class="text-center">@Model[i].Porazi</td>
                            <td class="text-center">@Model[i].DatiGolovi</td>
                            <td class="text-center">@Model[i].PrimljeniGolovi</td>
                            <td class="text-center">@Model[i].GolRazlika</td>
                            <td class="text-center"><strong>@Model[i].Bodovi</strong></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-2">
                <small class="text-muted">
                    <strong>Legenda:</strong> O - Odigrano, P - Pobede, N - Nerešeno, I - Izgubljeno,
                    DG - Dati golovi, PG - Primljeni golovi, GR - Gol razlika, Bod - Bodovi
                </small>
            </div>
        }
        else
        {
            <div class="alert alert-info">Nema utakmica u grupnoj fazi za ovaj turnir.</div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            Eliminaciona faza.
        </div>
    }
}
else
{
    <div class="alert alert-secondary">Molimo izaberite turnir da vidite tabelu.</div>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Nazad</a>
</div>