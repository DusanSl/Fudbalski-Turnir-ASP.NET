@model FudbalskiTurnir.ViewModels.SponzorViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Sponzor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImeSponzora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImeSponzora)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VrednostSponzora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VrednostSponzora)
        </dd>

        <dt class="col-sm-2">
            Povezani turniri
        </dt>
        <dd class="col-sm-10">
            @if (Model.Turniri != null && Model.Turniri.Any())
            {
                @string.Join(", ", Model.Turniri.Select(t => t.NazivTurnira))
            }
            else
            {
                <span>Nema povezanih turnira</span>
            }
        </dd>

        @* Kontakt podaci *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KontaktSponzora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KontaktSponzora)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SponzorID" />

        <input type="submit" value="Delete" class="btn btn-danger" />

        <div>
            <a asp-action="Index" class="btn btn-secondary mt-1">Back to List</a>
        </div>

        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark mt-1">Back to Admin Page</a>
    </form>
</div>