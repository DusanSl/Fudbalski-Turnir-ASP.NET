@model IEnumerable<FudbalskiTurnir.DAL.Models.Sponzor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-2 mt-2">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImeSponzora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KontaktSponzora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrednostSponzora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImeSponzora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KontaktSponzora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrednostSponzora)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SponzorID" class="btn btn-primary mb-2 mt-2">Edit</a>
                <a asp-action="Details" asp-route-id="@item.SponzorID" class="btn btn-secondary mb-2 mt-2">Details</a>
                <a asp-action="Delete" asp-route-id="@item.SponzorID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
