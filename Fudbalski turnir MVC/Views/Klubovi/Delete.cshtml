@model FudbalskiTurnir.ViewModels.KlubViewModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Klub</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImeKluba)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImeKluba)
        </dd>
        <dt class="col-sm-2">
            Turnir
        </dt>
        <dd class="col-sm-10">
            @if (Model.Turniri != null && Model.Turniri.Any())
            {
                @string.Join(", ", Model.Turniri.Select(t => t.NazivTurnira))
            }
            else
            {
                <span>Nije prijavljen na turnire.</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stadion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stadion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GodinaOsnivanja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GodinaOsnivanja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankingTima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RankingTima)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojIgraca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojIgraca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojOsvojenihTitula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojOsvojenihTitula)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="KlubID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-1">Back to List</a>
        </div>

        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark mt-1">Back to Admin Page</a>
    </form>
</div>