            <div class="form-group">
                <label asp-for="GodinaOsnivanja" class="control-label"></label>
                <input asp-for="GodinaOsnivanja" class="form-control" />
                <span asp-validation-for="GodinaOsnivanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RankingTima" class="control-label"></label>
