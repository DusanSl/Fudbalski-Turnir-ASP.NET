@model FudbalskiTurnir.ViewModels.SponzorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Izmenite</h1>

<h4>Sponzor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TurnirID" class="control-label">Trenutni turnir</label>
                <select asp-for="TurnirID" class="form-control" asp-items="ViewBag.ListaTurnira">
                    <option value="">Izaberite turnir</option>
                </select>
                <span asp-validation-for="TurnirID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="SponzorID" />
            <div class="form-group">
                <label asp-for="ImeSponzora" class="control-label"></label>
                <input asp-for="ImeSponzora" class="form-control" />
                <span asp-validation-for="ImeSponzora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KontaktSponzora" class="control-label"></label>
                <input asp-for="KontaktSponzora" class="form-control" />
                <span asp-validation-for="KontaktSponzora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrednostSponzora" class="control-label"></label>
                <input asp-for="VrednostSponzora" class="form-control" />
                <span asp-validation-for="VrednostSponzora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary mb-1 mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
</div>

<a asp-controller="Admin" asp-action="Index" class="btn btn-dark mb-1 mt-1">Nazad na admin stranicu</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
