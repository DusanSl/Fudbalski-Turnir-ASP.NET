@model IEnumerable<FudbalskiTurnir.ViewModels.UtakmicaViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-success mb-2 mt-2">Create New</a>
</p>
<table id="utakmiceTable" class="display compact cell-border">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                Turnir
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrviKlubNaziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugiKlubNaziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrviKlubGolovi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrugiKlubGolovi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kolo)
            </th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="control-icon"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NazivTurnira)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrviKlubNaziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrugiKlubNaziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrviKlubGolovi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DrugiKlubGolovi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kolo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UtakmicaID" class="btn btn-primary mb-2 mt-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.UtakmicaID" class="btn btn-secondary mb-2 mt-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.UtakmicaID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $('#utakmiceTable').DataTable({
            "responsive": {
                "details": {
                    "type": "column",
                    "target": 0,
                    "renderer": function (api, rowIdx, columns) {
                        var data = '<table class="table table-sm table-dark table-borderless mb-0">';
                        $.each(columns, function (i, col) {
                            if (i > 0) {
                                data += '<tr>' +
                                        '<td class="text-white-50 fw-bold" style="width: 40%;">' + col.title + '</td>' +
                                        '<td class="text-white">' + col.data + '</td>' +
                                        '</tr>';
                            }
                        });
                        data += '</table>';
                        return data;
                    }
                }
            },
            "columnDefs": [
                {
                    "className": "control",
                    "orderable": false,
                    "targets": 0
                }
            ],
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "lengthChange": true,
            "language": {
                "search": "Filter:",
                "info": "Prikazivanje _START_ do _END_ od _TOTAL_ entiteta",
                "infoEmpty": "Prikazivanje 0 do 0 od 0 entiteta",
                "infoFiltered": "(filtrirano od ukupno _MAX_ entiteta)",
                "lengthMenu": "Prikažite _MENU_ entiteta",
                "paginate": {
                    "first": "Prva",
                    "last": "Poslednja",
                    "next": "Sledeća",
                    "previous": "Prethodna"
                },
                "zeroRecords": "Nema rezultata",
                "emptyTable": "Nema podataka u tabeli"
            }
        });
    </script>
}