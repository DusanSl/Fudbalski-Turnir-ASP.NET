@model FudbalskiTurnir.ViewModels.UtakmicaViewModel
@{
    ViewData["Title"] = "Novi unos";
}

<h1>Nov unos</h1>
<h4>Utakmica</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-1">
                <label asp-for="TurnirID" class="control-label">Turnir</label>
                <select asp-for="TurnirID" id="turnirDropdown" class="form-control" asp-items="ViewBag.Turniri">
                    <option value="">Izaberite turnir</option>
                </select>
                <span asp-validation-for="TurnirID" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="Mesto" class="control-label"></label>
                <input asp-for="Mesto" class="form-control" placeholder="npr. Barcelona" />
                <span asp-validation-for="Mesto" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="PrviKlubNaziv" class="control-label">Domaći klub</label>
                <select asp-for="PrviKlubNaziv" id="prviKlubDropdown" class="form-control" disabled>
                    <option value="">Prvo izaberite turnir</option>
                </select>
                <span asp-validation-for="PrviKlubNaziv" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="DrugiKlubNaziv" class="control-label">Gostujući klub</label>
                <select asp-for="DrugiKlubNaziv" id="drugiKlubDropdown" class="form-control" disabled>
                    <option value="">Prvo izaberite turnir</option>
                </select>
                <span asp-validation-for="DrugiKlubNaziv" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="Kolo" class="control-label">Kolo turnira</label>
                <select asp-for="Kolo" class="form-control">
                    <option value="">Izaberite fazu</option>
                    <option value="Grupna faza">Grupna faza</option>
                    <option value="Osmina finala">Osmina finala</option>
                    <option value="Četvrtfinale">Četvrtfinale</option>
                    <option value="Polufinale">Polufinale</option>
                    <option value="Finale">Finale</option>
                </select>
                <span asp-validation-for="Kolo" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="Grupa" class="control-label">Grupa turnira</label>
                <select asp-for="Grupa" class="form-control">
                    <option value="">Izaberite grupu</option>
                    <option value="A">Grupa A</option>
                    <option value="B">Grupa B</option>
                    <option value="C">Grupa C</option>
                    <option value="D">Grupa D</option>
                    <option value="E">Grupa E</option>
                    <option value="F">Grupa F</option>
                    <option value="G">Grupa G</option>
                    <option value="H">Grupa H</option>
                </select>
                <span asp-validation-for="Grupa" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="PrviKlubGolovi" class="control-label">Golovi (Domaći)</label>
                <input asp-for="PrviKlubGolovi" class="form-control" placeholder="npr. 2"
                       value="@(Model.PrviKlubGolovi == 0 ? "" : Model.PrviKlubGolovi.ToString())" />
                <span asp-validation-for="PrviKlubGolovi" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="DrugiKlubGolovi" class="control-label">Golovi (Gosti)</label>
                <input asp-for="DrugiKlubGolovi" class="form-control" placeholder="npr. 1"
                       value="@(Model.DrugiKlubGolovi == 0 ? "" : Model.DrugiKlubGolovi.ToString())" />
                <span asp-validation-for="DrugiKlubGolovi" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-1">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produzeci" /> @Html.DisplayNameFor(model => model.Produzeci)
                </label>
            </div>

            <div class="form-group form-check mb-1">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Penali" /> @Html.DisplayNameFor(model => model.Penali)
                </label>
            </div>

            <div class="form-group mb-1">
                <label asp-for="PrviKlubPenali" class="control-label">Penali (Domaći)</label>
                <input asp-for="PrviKlubPenali" class="form-control" placeholder="npr. 5"
                       value="@(Model.PrviKlubPenali == 0 ? "" : Model.PrviKlubPenali.ToString())" />
                <span asp-validation-for="PrviKlubPenali" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="DrugiKlubPenali" class="control-label">Penali (Gosti)</label>
                <input asp-for="DrugiKlubPenali" class="form-control" placeholder="npr. 4"
                       value="@(Model.DrugiKlubPenali == 0 ? "" : Model.DrugiKlubPenali.ToString())" />
                <span asp-validation-for="DrugiKlubPenali" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Kreirajte" class="btn btn-success mb-1 mt-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Nazad na lista</a>
</div>
<a asp-controller="Admin" asp-action="Index" class="btn btn-dark mb-1 mt-1">Nazad na admin stranicu</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('turnirDropdown').addEventListener('change', function() {
            const turnirId = this.value;
            const prviKlubDropdown = document.getElementById('prviKlubDropdown');
            const drugiKlubDropdown = document.getElementById('drugiKlubDropdown');

            if (turnirId) {
                fetch(`/Utakmice/GetKluboviByTurnir?turnirId=${turnirId}`)
                    .then(response => response.json())
                    .then(data => {
                        prviKlubDropdown.innerHTML = '<option value="">Izaberite klub</option>';
                        drugiKlubDropdown.innerHTML = '<option value="">Izaberite klub</option>';

                        data.forEach(klub => {
                            prviKlubDropdown.innerHTML += `<option value="${klub.imeKluba}">${klub.imeKluba}</option>`;
                            drugiKlubDropdown.innerHTML += `<option value="${klub.imeKluba}">${klub.imeKluba}</option>`;
                        });

                        prviKlubDropdown.disabled = false;
                        drugiKlubDropdown.disabled = false;
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Greška pri učitavanju klubova');
                    });
            } else {
                prviKlubDropdown.innerHTML = '<option value="">Prvo izaberite turnir</option>';
                drugiKlubDropdown.innerHTML = '<option value="">Prvo izaberite turnir</option>';
                prviKlubDropdown.disabled = true;
                drugiKlubDropdown.disabled = true;
            }
        });

        const prviKlubDropdown = document.getElementById('prviKlubDropdown');
        const drugiKlubDropdown = document.getElementById('drugiKlubDropdown');
        const drugiKlubError = document.querySelector('span[data-valmsg-for="DrugiKlubNaziv"]');

        function validateKlubovi() {
            const prviKlub = prviKlubDropdown.value;
            const drugiKlub = drugiKlubDropdown.value;

            if (prviKlub && drugiKlub && prviKlub === drugiKlub) {
                if (drugiKlubError) {
                    drugiKlubError.textContent = 'Domaći i gostujući klub ne mogu biti isti.';
                    drugiKlubError.classList.add('field-validation-error');
                    drugiKlubError.classList.remove('field-validation-valid');
                }
                drugiKlubDropdown.classList.add('input-validation-error');
                return false;
            } else {
                if (drugiKlubError) {
                    drugiKlubError.textContent = '';
                    drugiKlubError.classList.add('field-validation-valid');
                    drugiKlubError.classList.remove('field-validation-error');
                }
                drugiKlubDropdown.classList.remove('input-validation-error');
                return true;
            }
        }
        drugiKlubDropdown.addEventListener('change', validateKlubovi);
        prviKlubDropdown.addEventListener('change', validateKlubovi);

        document.querySelector('form').addEventListener('submit', function(e) {
            if (!validateKlubovi()) {
                e.preventDefault();
                return false;
            }
        });

        const koloDropdown = document.querySelector('select[name="Kolo"]');
        const grupaFormGroup = document.querySelector('select[name="Grupa"]').closest('.form-group');

        function toggleGrupaField() {
            const selectedKolo = koloDropdown.value;
            if (selectedKolo === 'Grupna faza') {
                grupaFormGroup.style.display = 'block';
            } else {
                grupaFormGroup.style.display = 'none';
                document.querySelector('select[name="Grupa"]').value = '';
            }
        }

        koloDropdown.addEventListener('change', toggleGrupaField);
        toggleGrupaField();
    </script>
}