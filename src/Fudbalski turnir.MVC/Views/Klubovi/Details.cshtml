@model FudbalskiTurnir.ViewModels.KlubViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Svi detalji</h1>

<div>
    <h4>Klub</h4>

    @if (ViewBag.IsAdmin ?? false)
    {
        <h5 class="text-white-50 mt-3 mb-2">Sistemske informacije</h5>
        <dl class="row mb-3">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.KlubID)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.KlubID)
            </dd>
            <dt class="col-sm-3">
                Turnir ID
            </dt>
            <dd class="col-sm-9">
                @if (Model.TurnirID.HasValue && Model.TurnirID > 0)
                {
                    @Model.TurnirID
                }
                else
                {
                    <span class="text-muted">Nije u turniru</span>
                }
            </dd>
        </dl>
    }

    <h5 class="text-white-50 mt-3 mb-2">Osnovni podaci</h5>
    <dl class="row mb-3">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ImeKluba)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ImeKluba)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.GodinaOsnivanja)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.GodinaOsnivanja)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Stadion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Stadion)
        </dd>
    </dl>

    <h5 class="text-white-50 mt-3 mb-2">Timske informacije</h5>
    <dl class="row mb-3">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BrojIgraca)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BrojIgraca)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.RankingTima)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RankingTima)
        </dd>
        <dt class="col-sm-3">
            Trenutni turnir
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.NazivTurnira))
            {
                @Model.NazivTurnira
            }
            else
            {
                <span class="text-muted">Nema povezanih turnira.</span>
            }
        </dd>
    </dl>

    <h5 class="text-white-50 mt-3 mb-2">Dostignuća</h5>
    <dl class="row mb-3">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BrojOsvojenihTitula)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BrojOsvojenihTitula)
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
    @if (ViewBag.IsAdmin ?? false)
    {
        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark">Nazad na admin stranicu</a>
    }
</div>