@model FudbalskiTurnir.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Korisnik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Uloga</dt>
        <dd class="col-sm-10">
            @if (Model.Roles != null && Model.Roles.Any())
            {
                @string.Join(", ", Model.Roles)
            }
            else
            {
                <span>Bez uloge</span>
            }
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Aktivan" : "Banovan")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-1">Back to List</a>
        </div>

        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark mt-1">Back to Admin Page</a>
    </form>
</div>