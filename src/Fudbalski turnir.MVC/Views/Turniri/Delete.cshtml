@model FudbalskiTurnir.ViewModels.TurnirViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Obrišite</h1>
<h3>Da li ste sigurni da želite da obrišete?</h3>

<div>
    <h4>Turnir</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NazivTurnira)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NazivTurnira)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lokacija)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lokacija)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipTurnira)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipTurnira)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumPocetka)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPocetka)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumZavrsetka)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumZavrsetka)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TurnirID" />
        <input type="submit" value="Obrišite" class="btn btn-danger" />

        <div>
            <a asp-action="Index" class="btn btn-secondary mt-1">Nazad na listu</a>
        </div>

        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark mt-1">Nazad na admin stranicu</a>
    </form>
</div>