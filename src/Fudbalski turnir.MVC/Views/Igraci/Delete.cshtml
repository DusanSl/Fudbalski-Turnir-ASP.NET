@model FudbalskiTurnir.ViewModels.IgracViewModel
@{
    ViewData["Title"] = "Obrišite";
}
<div class="container admin-fade-in">
<h1>Obrišite</h1>
<h3>Da li ste sigurni da želite da obrišete?</h3>
 <div>
    <h4>Igrač</h4>
    <dl class="row mb-1">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prezime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prezime)
        </dd>
        <dt class = "col-sm-2">
            Klub </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImeKluba)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pozicija)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pozicija)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrojDresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojDresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nacionalnost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nacionalnost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumRodjenja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumRodjenja)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OsobaID" />
        <input type="submit" value="Obrišite" class="btn btn-danger mt-1" />
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-1">Nazad na listu</a>
        </div>
 
        <a asp-controller="Admin" asp-action="Index" class="btn btn-dark mt-1">Nazad na admin stranicu</a>
        </form>
    </div>
    </div>