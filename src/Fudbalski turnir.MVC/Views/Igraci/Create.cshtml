@model FudbalskiTurnir.ViewModels.IgracViewModel

@{
    ViewData["Title"] = "Novi unos";
}
<div class="admin-fade-in">
<h1>Novi unos</h1>

<h4 class="mb-4">Igrač</h4>
<div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-1">
                <label asp-for="KlubID" class="control-label">Klub</label>
                <select asp-for="KlubID" class="form-control" asp-items="ViewBag.Klub">
                    <option value="">Izaberite klub</option>
                </select>
                <span asp-validation-for="KlubID" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" placeholder="npr. Lionel" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" placeholder="npr. Messi" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Pozicija" class="control-label"></label>
                <input asp-for="Pozicija" class="form-control" placeholder="npr. Napadač" />
                <span asp-validation-for="Pozicija" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="BrojDresa" class="control-label">Broj dresa</label>
                <input asp-for="BrojDresa" class="form-control" placeholder="npr. 10" value="@(Model.BrojDresa == 0 ? "" : Model.BrojDresa.ToString())" />
                <span asp-validation-for="BrojDresa" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="DatumRodjenja" class="control-label"></label>
                <input asp-for="DatumRodjenja" class="form-control" />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Nacionalnost" class="control-label"></label>
                <input asp-for="Nacionalnost" class="form-control" placeholder="npr. Argentina" />
                <span asp-validation-for="Nacionalnost" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Kreirajte" class="btn btn-success mb-1 mt-1" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
</div>

<a asp-controller="Admin" asp-action="Index" class="btn btn-dark mb-1 mt-1">Nazad na admin stranicu</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
