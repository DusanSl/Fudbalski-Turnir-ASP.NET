@model GrupnaFazaViewModel
@{
    ViewData["Title"] = "Tabela Turnira";
}

<h1 class="display-6 fw-bold standings-title">Tabela Turnira</h1>

<div class="row mb-4 standings-filter">
    <div class="col-md-6">
        <form method="get" asp-action="Index">
            <div class="form-group">
                <label class="fs-4 form-label">Izaberite Turnir:</label>

                <select name="turnirId" class="form-select bg-dark text-white border-primary shadow-none turnir-selector" onchange="this.form.submit()">
                    <option value="" class="bg-dark text-white">Svi turniri</option>
                    @foreach (var item in (SelectList)ViewBag.Turniri)
                    {
                        <option value="@item.Value"
                                selected="@(item.Value == ViewBag.SelectedTurnirId?.ToString())"
                                class="bg-dark text-white">
                            @item.Text
                        </option>
                    }
                </select>
            </div>
            <input type="hidden" name="faza" value="@(ViewBag.SelectedFaza ?? "Grupna")" />
        </form>
    </div>
</div>

@if (ViewBag.SelectedTurnirId != null)
{
    <ul class="nav nav-tabs mb-3 border-0 standings-tabs">
        <li class="nav-item me-2">
            <a class="nav-link border-primary standings-tab @(ViewBag.SelectedFaza == "Grupna" ? "active" : "")"
               asp-route-turnirId="@ViewBag.SelectedTurnirId" asp-route-faza="Grupna">Grupna Faza</a>
        </li>
        <li class="nav-item">
            <a class="nav-link border-primary standings-tab @(ViewBag.SelectedFaza == "Eliminaciona" ? "active" : "")"
               asp-route-turnirId="@ViewBag.SelectedTurnirId" asp-route-faza="Eliminaciona">Eliminaciona Faza</a>
        </li>
    </ul>

    <div class="standings-content">
        @if (ViewBag.SelectedFaza == "Grupna")
        {
            <partial name="Grupa" model="Model.Grupe" />
        }
        else
        {
            <partial name="Knockout" model="Model.Bracket" />
        }
    </div>
}

<div class="mt-3 standings-back">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary back-button">Nazad na početnu</a>
</div>