@model BracketViewModel
@{
    void RenderMatch(KnockoutUtakmica match)
    {
        if (match == null) return;

        <div class="mb-3 border border-secondary rounded-3 bg-dark shadow-sm overflow-hidden" style="min-width: 180px;">

            <div class="d-flex justify-content-between align-items-center p-2 club-bracket-link"
                 style="cursor:pointer;" data-naziv="@match.PrviKlubNaziv">
                <span class="text-truncate @(match.Pobednik == match.PrviKlubNaziv ? "text-white fw-bold" : (match.Pobednik != null ? "text-white-50 text-decoration-line-through opacity-50" : "text-white-50"))"
                      style="max-width: 110px;">
                    @match.PrviKlubNaziv
                </span>
                <div class="d-flex align-items-center">
                    @if (match.PrviKlubPenali.HasValue)
                    {
                        <small class="text-danger me-1 fw-bold" style="font-size: 0.7rem;">(@match.PrviKlubPenali)</small>
                    }
                    <span class="badge bg-secondary bg-opacity-10 border border-secondary text-white">
                        @(match.PrviKlubGolovi?.ToString() ?? "0")
                    </span>
                </div>
            </div>

            <div class="border-top border-secondary border-opacity-10"></div>

            <div class="d-flex justify-content-between align-items-center p-2 club-bracket-link"
                 style="cursor:pointer;" data-naziv="@match.DrugiKlubNaziv">
                <span class="text-truncate @(match.Pobednik == match.DrugiKlubNaziv ? "text-white fw-bold" : (match.Pobednik != null ? "text-white-50 text-decoration-line-through opacity-50" : "text-white-50"))"
                      style="max-width: 110px;">
                    @match.DrugiKlubNaziv
                </span>
                <div class="d-flex align-items-center">
                    @if (match.DrugiKlubPenali.HasValue)
                    {
                        <small class="text-danger me-1 fw-bold" style="font-size: 0.7rem;">(@match.DrugiKlubPenali)</small>
                    }
                    <span class="badge bg-secondary bg-opacity-10 border border-secondary text-white">
                        @(match.DrugiKlubGolovi?.ToString() ?? "0")
                    </span>
                </div>
            </div>

            @if (match.Produzeci || match.PrviKlubPenali.HasValue)
            {
                <div class="text-center py-1 fw-bold small @(match.PrviKlubPenali.HasValue ? "bg-danger bg-opacity-10 text-danger" : "bg-warning bg-opacity-10 text-warning")"
                     style="font-size: 0.6rem; letter-spacing: 1px;">
                    @(match.PrviKlubPenali.HasValue ? "PENALI" : "PRODUŽECI")
                </div>
            }
        </div>
    }
}

@if (Model != null)
{
    <div class="container-fluid py-4 overflow-auto">
        <div class="d-flex justify-content-between align-items-stretch text-center" style="min-width: 1200px;">

            @* --- LEVA STRANA --- *@
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-white fw-bold mb-2">OSMINA FINALA</small>
                @foreach (var m in Model.OsminaFinala.Take(4)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-white fw-bold mb-2">ČETVRTFINALE</small>
                @foreach (var m in Model.Cetvrtfinale.Take(2)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-white fw-bold mb-2">POLUFINALE</small>
                @foreach (var m in Model.Polufinale.Take(1)) { RenderMatch(m); }
            </div>

            @* --- FINALE --- *@
            <div class="d-flex flex-column justify-content-center px-4">
                <div class="text-center">
                    <h4 class="text-primary fw-bold mb-3">FINALE</h4>
                    @if (Model.Finale != null)
                    {
                        <div class="card bg-dark border-primary border-2 shadow-lg mx-auto overflow-hidden" style="width: 280px;">
                            <div class="card-body p-0">
                                <div class="p-3 club-bracket-link" style="cursor:pointer;" data-naziv="@Model.Finale.PrviKlubNaziv">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fs-5 @(Model.Finale.Pobednik == Model.Finale.PrviKlubNaziv ? "text-white fw-bold" : (Model.Finale.Pobednik != null ? "text-white-50 text-decoration-line-through opacity-50" : "text-white-50"))">
                                            @Model.Finale.PrviKlubNaziv
                                        </span>
                                        <span class="fs-4 text-white-50">
                                            @if (Model.Finale.PrviKlubPenali.HasValue)
                                            {
                                                <small class="text-danger fs-6">(@Model.Finale.PrviKlubPenali)</small>
                                            }
                                            @Model.Finale.PrviKlubGolovi
                                        </span>
                                    </div>
                                </div>

                                <div class="border-top border-secondary opacity-25"></div>

                                <div class="p-3 club-bracket-link" style="cursor:pointer;" data-naziv="@Model.Finale.DrugiKlubNaziv">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fs-5 @(Model.Finale.Pobednik == Model.Finale.DrugiKlubNaziv ? "text-white fw-bold" : (Model.Finale.Pobednik != null ? "text-white-50 text-decoration-line-through opacity-50" : "text-white-50"))">
                                            @Model.Finale.DrugiKlubNaziv
                                        </span>
                                        <span class="fs-4 text-white-50">
                                            @if (Model.Finale.DrugiKlubPenali.HasValue)
                                            {
                                                <small class="text-danger fs-6">(@Model.Finale.DrugiKlubPenali)</small>
                                            }
                                            @Model.Finale.DrugiKlubGolovi
                                        </span>
                                    </div>
                                </div>

                                @if (Model.Finale.Produzeci || Model.Finale.PrviKlubPenali.HasValue)
                                {
                                    <div class="py-2 fw-bold @(Model.Finale.PrviKlubPenali.HasValue ? "bg-danger bg-opacity-10 text-danger" : "bg-warning bg-opacity-10 text-warning")" style="font-size: 0.75rem;">
                                        @(Model.Finale.PrviKlubPenali.HasValue ? "PENALI" : "PRODUŽECI")
                                    </div>
                                }
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Finale.Pobednik))
                        {
                            <div class="mt-4">
                                <span class="badge bg-success text-uppercase mb-1">Šampion</span>
                                <h2 class="fw-bold text-white text-uppercase">@Model.Finale.Pobednik</h2>
                            </div>
                        }
                    }
                </div>
            </div>

            @* --- DESNA STRANA --- *@
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-white fw-bold mb-2">POLUFINALE</small>
                @foreach (var m in Model.Polufinale.Skip(1).Take(1)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-white fw-bold mb-2">ČETVRTFINALE</small>
                @foreach (var m in Model.Cetvrtfinale.Skip(2).Take(2)) { RenderMatch(m); }
            </div>
            <div class="d-flex flex-column justify-content-around px-2">
                <small class="text-white fw-bold mb-2">OSMINA FINALA</small>
                @foreach (var m in Model.OsminaFinala.Skip(4).Take(4)) { RenderMatch(m); }
            </div>

        </div>
    </div>
}