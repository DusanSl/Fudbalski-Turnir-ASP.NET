@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">

    <div class="mb-5">
        <h1 class="display-5 fw-bold text-white">Admin Panel</h1>
        <p class="lead text-white-50">Upravljanje bazom podataka i sistemskim entitetima.</p>
    </div>

